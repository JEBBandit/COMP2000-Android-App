<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Profile Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:padding="10dp"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="start"
                    android:contentDescription="@string/nav_header_desc"
                    android:src="@mipmap/leslie_warren_headshot_fg_round" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Leslie Warren"
                        android:enabled="false"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="32dp" />

                    <EditText
                        android:id="@+id/job_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Full-Stack Developer"
                        android:enabled="false"
                        android:textSize="17dp" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Personal Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="fill_parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:padding="10dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="Personal Information:" />

                <!-- Make these fields editable on click of Edit button -->
                <EditText
                    android:id="@+id/email"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="lesliewarren@devsquared.co.uk"
                    android:hint="Email Address"
                    android:enabled="false"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/mobile"
                    android:layout_marginTop="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Mobile Number"
                    android:text="079615356483"
                    android:enabled="false"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="Address:" />

                <EditText
                    android:id="@+id/address_line1"
                    android:layout_marginTop="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Address Line 1"
                    android:text="17 Portsmouth Road"
                    android:enabled="false"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/address_line2"
                    android:layout_marginTop="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Address Line 2"
                    android:text="Line 2: Southmead"
                    android:enabled="false"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/address_line3"
                    android:layout_marginTop="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Address Line 3"
                    android:text="Avon"
                    android:enabled="false"
                    android:textColor="@color/black" />

                <EditText
                    android:id="@+id/address_city"
                    android:layout_marginTop="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="City"
                    android:text="Bristol"
                    android:enabled="false"
                    android:textColor="@color/black" />


                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="HR Information:"/>


                <TextView
                    android:layout_marginTop="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Salary: Â£36,550.00"
                    />

                <TextView
                    android:layout_marginTop="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Tax Code: 1257L"
                    />

                <TextView
                    android:layout_marginTop="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Employment Start Date: 24/01/2024"
                    />

                <TextView
                    android:layout_marginTop="7dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Date of Birth: 19/08/1998"
                    />

                <!-- Add additional EditTexts here for each field -->

                <!-- Edit, Confirm, and Cancel Buttons -->
                <Button
                    android:id="@+id/editButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Edit my Details"
                    android:backgroundTint="@color/blue" />

                <Button
                    android:id="@+id/confirmButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Confirm"
                    android:visibility="gone"
                    android:backgroundTint="@color/blue" />

                <Button
                    android:id="@+id/cancelButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Cancel"
                    android:visibility="gone"
                    android:backgroundTint="@color/red" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
